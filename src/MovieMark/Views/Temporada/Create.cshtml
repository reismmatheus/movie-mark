@model MovieMark.Models.TemporadaViewModels.TemporadaCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-route="create" method="post" id="form-create">

    <input asp-for="SerieId" type="hidden" />

    <div class="form-group">
        <label asp-for="Nome">Nome da Temporada</label>
        <input asp-for="Nome" type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>